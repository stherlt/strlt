---
const pageTitle = "projects";
const allPosts = await Astro.glob('../pages/projects/*.md');
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle={pageTitle}>
    <div class="containertype">
        <div class = "typed">{pageTitle}</div>
        
    </div>

    <p></p>
    <div class="blogPostCont">
        {allPosts.map((post) => (
            <div class="blogPostBox">
                <a href={post.url} class="blogPostLink">
                    <h2>{post.frontmatter.title}</h2>
                    <p class="postDate">{post.frontmatter.pubDate}</p> <!-- Add date -->
                    <p class="postExcerpt">{post.frontmatter.description}</p> <!-- Add excerpt -->
                    
                    <div class="tags">{post.frontmatter.tags.map(tag => <span>{tag}</span>)}</div> 
                </a>
            </div>
            ))}
    </div>
    
	
</BaseLayout>

<style>
    .blogPostCont {
        display: flex;
        color: white;
        font-size: 15px;
        flex-wrap: wrap;
        gap:20px;
        animation: typed 0.3s ease;
    }

    .blogPostBox {
        border: 1px solid rgba(255, 255, 255, 0.63);
        font-style: bold;
        background-color: #29272b;
        padding: 15px;
        box-sizing: border-box;
        border-radius: 10px;
        transition: scale 0.1s ease-in;
        transition: font-size 0.2s ease-in;
    }
    
    .postDate {
        font-size: 8px;
        font-style: italic;
        color: rgba(255, 255, 255, 0.832);

    }
    .postExcert {
        font-size: 9px;
        color: rgba(255, 255, 255, 0.832);

    }
    .blogPostBox:hover {
        scale: 1.1;
        
    }
    .blogPostLink {
        color: inherit;
        text-decoration: none;
    }
    .blogPosts a:hover{
        font-weight: bolder;
        
    }
    .blogPostBox::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: 0%;
        border-radius: 10px;
        background-image: linear-gradient(45deg, rgba(206, 37, 155, 0.247), transparent); /* Adjust gradient colors and opacity */
        filter: blur(8px); /* Adjust blur radius */
        z-index: -100; /* Ensure shadow is behind the box */
        transition: opacity 1.2s ease; /* Smooth transition for opacity */
        opacity: 0; /* Initially hidden */
        
    }

    .blogPostBox:hover::before {
        background-size: 100%;
        opacity: 1; 
    }
    .blogPosts a {
        color: inherit;
        text-decoration: none;
        font-weight: normal;
        text-transform: lowercase;
        user-select: none; /* Change to the desired color */
    }
    
    .blogPostBox:hover{
        font-size: 18px;
    }
    .blogPostBox .tags {
        display: none; /* Initially hide the tags */
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 2; /* Ensure tags appear above gradient */
        background-color: rgba(0, 0, 0, 0.356);
        padding: 5px 10px;
        border-radius: 5px;
        transition: opacity 1.2 ease;
    }
    

    .blogPostBox:hover .postPreview,
    .blogPostBox:hover .tags {
        display: block; /* Show image and tags on hover */
    }
    
</style>